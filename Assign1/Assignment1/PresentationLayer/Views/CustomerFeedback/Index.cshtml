@model List<PresentationLayer.Models.CustomerFeedbackViewModel>

@{
    ViewData["Title"] = "Phản hồi khách hàng";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-comments"></i> Phản hồi khách hàng</h2>
    </div>

    <!-- Search Form -->
    <div class="card mb-4">
        <div class="card-body">
            <form method="get" asp-action="Index">
                <div class="row">
                    <div class="col-md-4 mb-3">
                        <label class="form-label">Tìm kiếm</label>
                        <input type="text" name="search" class="form-control" placeholder="Tên KH, email, nội dung..." value="@ViewBag.Search">
                    </div>
                    <div class="col-md-3 mb-3">
                        <label class="form-label">Sản phẩm</label>
                        <select name="productId" class="form-select">
                            <option value="">-- Tất cả sản phẩm --</option>
                            @if (ViewBag.Products != null)
                            {
                                @foreach (var product in ViewBag.Products as List<dynamic>)
                                {
                                    <option value="@product.Id" selected="@(ViewBag.SelectedProductId == product.Id)">
                                        @product.Name
                                    </option>
                                }
                            }
                        </select>
                    </div>
                    <div class="col-md-2 mb-3">
                        <label class="form-label">Đánh giá</label>
                        <select name="rating" class="form-select">
                            <option value="">-- Tất cả --</option>
                            <option value="5" selected="@(ViewBag.SelectedRating == 5)">⭐⭐⭐⭐⭐ (5 sao)</option>
                            <option value="4" selected="@(ViewBag.SelectedRating == 4)">⭐⭐⭐⭐ (4 sao)</option>
                            <option value="3" selected="@(ViewBag.SelectedRating == 3)">⭐⭐⭐ (3 sao)</option>
                            <option value="2" selected="@(ViewBag.SelectedRating == 2)">⭐⭐ (2 sao)</option>
                            <option value="1" selected="@(ViewBag.SelectedRating == 1)">⭐ (1 sao)</option>
                        </select>
                    </div>
                    <div class="col-md-3 mb-3 d-flex align-items-end">
                        <button type="submit" class="btn btn-primary w-100">
                            <i class="fas fa-search"></i> Tìm kiếm
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Results -->
    <div class="card">
        <div class="card-body">
            @if (Model.Count == 0)
            {
                <div class="text-center py-5">
                    <i class="fas fa-comments fa-3x text-muted mb-3"></i>
                    <h5 class="text-muted">Chưa có phản hồi nào</h5>
                    <p class="text-muted">Khách hàng chưa để lại phản hồi nào</p>
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>Khách hàng</th>
                                <th>Sản phẩm</th>
                                <th>Đánh giá</th>
                                <th>Nội dung</th>
                                <th>Ngày tạo</th>
                                <th>Thao tác</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var feedback in Model)
                            {
                                <tr>
                                    <td>
                                        <div>
                                            <strong>@feedback.CustomerName</strong>
                                            <br>
                                            <small class="text-muted">@feedback.CustomerEmail</small>
                                            <br>
                                            <small class="text-muted">@feedback.CustomerPhone</small>
                                        </div>
                                    </td>
                                    <td>
                                        <div>
                                            <strong>@feedback.ProductName</strong>
                                            <br>
                                            <small class="text-muted">SKU: @feedback.ProductSku</small>
                                            <br>
                                            <span class="badge bg-secondary">@feedback.BrandName</span>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            @for (int i = 1; i <= 5; i++)
                                            {
                                                if (i <= feedback.Rating)
                                                {
                                                    <i class="fas fa-star text-warning"></i>
                                                }
                                                else
                                                {
                                                    <i class="far fa-star text-muted"></i>
                                                }
                                            }
                                            <span class="ms-2 fw-bold">@feedback.Rating/5</span>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="text-truncate" style="max-width: 200px;" title="@feedback.Comment">
                                            @feedback.Comment
                                        </div>
                                    </td>
                                    <td>
                                        <small>@feedback.CreatedAt.ToString("dd/MM/yyyy HH:mm")</small>
                                    </td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a asp-action="Detail" asp-route-id="@feedback.Id" class="btn btn-sm btn-outline-primary">
                                                <i class="fas fa-eye"></i> Chi tiết
                                            </a>
                                            <button type="button" class="btn btn-sm btn-outline-danger" 
                                                    onclick="confirmDelete('@feedback.Id', '@feedback.CustomerName')">
                                                <i class="fas fa-trash"></i> Xóa
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>

<!-- Delete Form -->
<form id="deleteForm" method="post" style="display: none;">
    <input type="hidden" name="id" id="deleteId">
</form>

<script>
function confirmDelete(id, customerName) {
    if (confirm(`Bạn có chắc muốn xóa phản hồi của ${customerName}?`)) {
        document.getElementById('deleteId').value = id;
        document.getElementById('deleteForm').action = '@Url.Action("Delete")';
        document.getElementById('deleteForm').submit();
    }
}
</script>
