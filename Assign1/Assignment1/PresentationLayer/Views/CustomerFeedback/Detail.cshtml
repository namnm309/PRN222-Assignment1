@model PresentationLayer.Models.CustomerFeedbackDetailViewModel

@{
    ViewData["Title"] = "Chi tiết phản hồi";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-comment-dots"></i> Chi tiết phản hồi</h2>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left"></i> Quay lại
        </a>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Nội dung phản hồi</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <h6>Đánh giá:</h6>
                        <div class="d-flex align-items-center">
                            @for (int i = 1; i <= 5; i++)
                            {
                                if (i <= Model.Rating)
                                {
                                    <i class="fas fa-star text-warning fa-lg"></i>
                                }
                                else
                                {
                                    <i class="far fa-star text-muted fa-lg"></i>
                                }
                            }
                            <span class="ms-3 fs-5 fw-bold">@Model.Rating/5 sao</span>
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        <h6>Nội dung:</h6>
                        <div class="border rounded p-3 bg-light">
                            @Model.Comment
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6">
                            <h6>Ngày tạo:</h6>
                            <span>@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm:ss")</span>
                        </div>
                        <div class="col-md-6">
                            <h6>Cập nhật:</h6>
                            <span>@Model.UpdatedAt.ToString("dd/MM/yyyy HH:mm:ss")</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-md-4">
            <!-- Thông tin khách hàng -->
            <div class="card mb-3">
                <div class="card-header">
                    <h5 class="mb-0"><i class="fas fa-user"></i> Thông tin khách hàng</h5>
                </div>
                <div class="card-body">
                    <div class="mb-2">
                        <strong>Tên:</strong> @Model.CustomerName
                    </div>
                    <div class="mb-2">
                        <strong>Email:</strong> 
                        <a href="mailto:@Model.CustomerEmail">@Model.CustomerEmail</a>
                    </div>
                    <div class="mb-2">
                        <strong>Điện thoại:</strong> 
                        <a href="tel:@Model.CustomerPhone">@Model.CustomerPhone</a>
                    </div>
                    <div class="mb-2">
                        <strong>Địa chỉ:</strong> @Model.CustomerAddress
                    </div>
                </div>
            </div>
            
            <!-- Thông tin sản phẩm -->
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0"><i class="fas fa-car"></i> Sản phẩm</h5>
                </div>
                <div class="card-body">
                    <div class="mb-2">
                        <strong>Tên xe:</strong> @Model.ProductName
                    </div>
                    <div class="mb-2">
                        <strong>SKU:</strong> @Model.ProductSku
                    </div>
                    <div class="mb-2">
                        <strong>Thương hiệu:</strong> 
                        <span class="badge bg-primary">@Model.BrandName</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Actions -->
    <div class="row mt-4">
        <div class="col-12">
            <div class="d-flex gap-2">
                <a asp-action="Index" class="btn btn-primary">
                    <i class="fas fa-list"></i> Danh sách phản hồi
                </a>
                <button type="button" class="btn btn-danger" 
                        onclick="confirmDelete('@Model.Id', '@Model.CustomerName')">
                    <i class="fas fa-trash"></i> Xóa phản hồi
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Delete Form -->
<form id="deleteForm" method="post" style="display: none;">
    <input type="hidden" name="id" id="deleteId">
</form>

<script>
function confirmDelete(id, customerName) {
    if (confirm(`Bạn có chắc muốn xóa phản hồi của ${customerName}?`)) {
        document.getElementById('deleteId').value = id;
        document.getElementById('deleteForm').action = '@Url.Action("Delete")';
        document.getElementById('deleteForm').submit();
    }
}
</script>
