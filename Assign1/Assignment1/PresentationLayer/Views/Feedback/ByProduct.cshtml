@model IEnumerable<BusinessLayer.ViewModels.FeedbackViewModel>
@{
    ViewData["Title"] = "Phản hồi theo sản phẩm";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
    var productId = ViewBag.ProductId as Guid?;
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h3 class="card-title">
                        <i class="fas fa-comments"></i>
                        Phản hồi theo sản phẩm
                    </h3>
                    <div>
                        <a href="@Url.Action("Index", "Feedback")" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Quay lại
                        </a>
                        <a href="@Url.Action("Create", "Feedback", new { productId = productId, customerId = Guid.Empty })" class="btn btn-primary">
                            <i class="fas fa-plus"></i> Thêm phản hồi
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            @TempData["Error"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }
                    @if (TempData["Msg"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            @TempData["Msg"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    @if (Model != null && Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th>Khách hàng</th>
                                        <th>Đánh giá</th>
                                        <th>Bình luận</th>
                                        <th>Ngày tạo</th>
                                        <th>Thao tác</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var feedback in Model)
                                    {
                                        <tr>
                                            <td>
                                                <div>
                                                    <strong>@feedback.CustomerName</strong>
                                                    @if (!string.IsNullOrEmpty(feedback.CustomerEmail))
                                                    {
                                                        <br><small class="text-muted">@feedback.CustomerEmail</small>
                                                    }
                                                    @if (!string.IsNullOrEmpty(feedback.CustomerPhone))
                                                    {
                                                        <br><small class="text-muted">@feedback.CustomerPhone</small>
                                                    }
                                                </div>
                                            </td>
                                            <td>
                                                <div class="rating">
                                                    @for (int i = 1; i <= 5; i++)
                                                    {
                                                        if (i <= feedback.Rating)
                                                        {
                                                            <i class="fas fa-star text-warning"></i>
                                                        }
                                                        else
                                                        {
                                                            <i class="far fa-star text-muted"></i>
                                                        }
                                                    }
                                                    <span class="ms-1">(@feedback.Rating/5)</span>
                                                </div>
                                            </td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(feedback.Comment))
                                                {
                                                    <div class="comment-text">
                                                        @if (feedback.Comment.Length > 100)
                                                        {
                                                            <span class="comment-preview">@feedback.Comment.Substring(0, 100)...</span>
                                                            <button class="btn btn-link btn-sm" onclick="toggleComment(this)">Xem thêm</button>
                                                            <span class="comment-full" style="display: none;">@feedback.Comment</span>
                                                        }
                                                        else
                                                        {
                                                            @feedback.Comment
                                                        }
                                                    </div>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">Không có bình luận</span>
                                                }
                                            </td>
                                            <td>
                                                <small>@feedback.CreatedAt.ToString("dd/MM/yyyy HH:mm")</small>
                                            </td>
                                            <td>
                                                <form method="post" action="@Url.Action("Delete", "Feedback")" 
                                                      onsubmit="return confirm('Bạn có chắc chắn muốn xóa phản hồi này?')" 
                                                      style="display: inline;">
                                                    <input type="hidden" name="id" value="@feedback.Id" />
                                                    <input type="hidden" name="productId" value="@feedback.ProductId" />
                                                    <button type="submit" class="btn btn-danger btn-sm" title="Xóa">
                                                        <i class="fas fa-trash"></i>
                                                    </button>
                                                </form>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-comments fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">Chưa có phản hồi nào cho sản phẩm này</h5>
                            <p class="text-muted">Khách hàng chưa có phản hồi nào cho sản phẩm này.</p>
                            <a href="@Url.Action("Create", "Feedback", new { productId = productId, customerId = Guid.Empty })" class="btn btn-primary">
                                <i class="fas fa-plus"></i> Thêm phản hồi đầu tiên
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<script>
function toggleComment(button) {
    const preview = button.previousElementSibling;
    const full = button.nextElementSibling;
    
    if (full.style.display === 'none') {
        preview.style.display = 'none';
        full.style.display = 'inline';
        button.textContent = 'Thu gọn';
    } else {
        preview.style.display = 'inline';
        full.style.display = 'none';
        button.textContent = 'Xem thêm';
    }
}
</script>

<style>
.rating {
    display: flex;
    align-items: center;
}

.comment-text {
    max-width: 300px;
}

.comment-preview, .comment-full {
    word-wrap: break-word;
}

.table th {
    background-color: #343a40;
    color: white;
    border: none;
}

.card-header {
    background-color: #f8f9fa;
    border-bottom: 1px solid #dee2e6;
}

.card-title {
    margin: 0;
    color: #495057;
}
</style>
