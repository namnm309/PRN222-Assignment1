@model PresentationLayer.Models.VehicleLookupViewModel

@{
    ViewData["Title"] = "Chi tiết xe";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-car"></i> Chi tiết xe</h2>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left"></i> Quay lại
        </a>
    </div>

    <div class="row">
        <div class="col-md-6">
            @if (!string.IsNullOrEmpty(Model.ImageUrl))
            {
                <img src="@Model.ImageUrl" class="img-fluid rounded shadow" alt="@Model.Name">
            }
            else
            {
                <div class="bg-light rounded shadow d-flex align-items-center justify-content-center" style="height: 400px;">
                    <i class="fas fa-car fa-5x text-muted"></i>
                </div>
            }
        </div>
        
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h3 class="card-title">@Model.Name</h3>
                    <p class="text-muted">SKU: @Model.Sku</p>
                    
                    <div class="mb-3">
                        <h6>Mô tả:</h6>
                        <p>@Model.Description</p>
                    </div>
                    
                    <div class="row mb-3">
                        <div class="col-6">
                            <h6>Thương hiệu:</h6>
                            <span class="badge bg-primary fs-6">@Model.BrandName</span>
                        </div>
                        <div class="col-6">
                            <h6>Tình trạng:</h6>
                            <span class="badge @(Model.IsActive ? "bg-success" : "bg-danger")">
                                @(Model.IsActive ? "Đang bán" : "Ngừng bán")
                            </span>
                        </div>
                    </div>
                    
                    <div class="row mb-3">
                        <div class="col-6">
                            <h6>Tồn kho:</h6>
                            <span class="fs-5 @(Model.StockQuantity > 0 ? "text-success" : "text-danger")">
                                @Model.StockQuantity xe
                            </span>
                        </div>
                        <div class="col-6">
                            <h6>Giá bán:</h6>
                            <span class="fs-4 fw-bold text-primary">
                                @Model.Price.ToString("N0") VNĐ
                            </span>
                        </div>
                    </div>
                    
                    <div class="row mb-3">
                        <div class="col-6">
                            <h6>Ngày tạo:</h6>
                            <span>@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</span>
                        </div>
                        <div class="col-6">
                            <h6>Cập nhật:</h6>
                            <span>@Model.UpdatedAt.ToString("dd/MM/yyyy HH:mm")</span>
                        </div>
                    </div>
                    
                    <div class="d-grid gap-2">
                        <a asp-action="Index" class="btn btn-primary">
                            <i class="fas fa-search"></i> Tìm kiếm khác
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
