@model List<PresentationLayer.Models.VehicleLookupViewModel>

@{
    ViewData["Title"] = "Tra cứu xe";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-search"></i> Tra cứu xe</h2>
    </div>

    <!-- Search Form -->
    <div class="card mb-4">
        <div class="card-body">
            <form method="get" asp-action="Index">
                <div class="row">
                    <div class="col-md-4 mb-3">
                        <label class="form-label">Tìm kiếm</label>
                        <input type="text" name="search" class="form-control" placeholder="Tên xe, SKU, mô tả..." value="@ViewBag.Search">
                    </div>
                    <div class="col-md-2 mb-3">
                        <label class="form-label">Thương hiệu</label>
                        <select name="brandId" class="form-select">
                            <option value="">-- Tất cả --</option>
                            @if (ViewBag.Brands != null)
                            {
                                @foreach (var brand in ViewBag.Brands as List<dynamic>)
                                {
                                    <option value="@brand.Id" selected="@(ViewBag.SelectedBrandId == brand.Id)">
                                        @brand.Name
                                    </option>
                                }
                            }
                        </select>
                    </div>
                    <div class="col-md-2 mb-3">
                        <label class="form-label">Giá từ (VNĐ)</label>
                        <input type="number" name="minPrice" class="form-control" placeholder="0" value="@ViewBag.MinPrice">
                    </div>
                    <div class="col-md-2 mb-3">
                        <label class="form-label">Giá đến (VNĐ)</label>
                        <input type="number" name="maxPrice" class="form-control" placeholder="999999999" value="@ViewBag.MaxPrice">
                    </div>
                    <div class="col-md-2 mb-3 d-flex align-items-end">
                        <button type="submit" class="btn btn-primary w-100">
                            <i class="fas fa-search"></i> Tìm kiếm
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Results -->
    <div class="card">
        <div class="card-body">
            @if (Model.Count == 0)
            {
                <div class="text-center py-5">
                    <i class="fas fa-car fa-3x text-muted mb-3"></i>
                    <h5 class="text-muted">Không tìm thấy xe nào</h5>
                    <p class="text-muted">Thử thay đổi từ khóa tìm kiếm hoặc bộ lọc</p>
                </div>
            }
            else
            {
                <div class="row">
                    @foreach (var vehicle in Model)
                    {
                        <div class="col-md-6 col-lg-4 mb-4">
                            <div class="card h-100 shadow-sm">
                                @if (!string.IsNullOrEmpty(vehicle.ImageUrl))
                                {
                                    <img src="@vehicle.ImageUrl" class="card-img-top" alt="@vehicle.Name" style="height: 200px; object-fit: cover;">
                                }
                                else
                                {
                                    <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 200px;">
                                        <i class="fas fa-car fa-3x text-muted"></i>
                                    </div>
                                }
                                
                                <div class="card-body d-flex flex-column">
                                    <h5 class="card-title">@vehicle.Name</h5>
                                    <p class="card-text text-muted small">SKU: @vehicle.Sku</p>
                                    <p class="card-text">@vehicle.Description</p>
                                    
                                    <div class="mt-auto">
                                        <div class="d-flex justify-content-between align-items-center mb-2">
                                            <span class="text-muted">Thương hiệu:</span>
                                            <span class="badge bg-primary">@vehicle.BrandName</span>
                                        </div>
                                        
                                        <div class="d-flex justify-content-between align-items-center mb-2">
                                            <span class="text-muted">Tồn kho:</span>
                                            <span class="@(vehicle.StockQuantity > 0 ? "text-success" : "text-danger")">
                                                @vehicle.StockQuantity xe
                                            </span>
                                        </div>
                                        
                                        <div class="d-flex justify-content-between align-items-center mb-3">
                                            <span class="text-muted">Giá:</span>
                                            <span class="fw-bold text-primary">@vehicle.Price.ToString("N0") VNĐ</span>
                                        </div>
                                        
                                        <a asp-action="Detail" asp-route-id="@vehicle.Id" class="btn btn-outline-primary w-100">
                                            <i class="fas fa-eye"></i> Xem chi tiết
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
        </div>
    </div>
</div>
